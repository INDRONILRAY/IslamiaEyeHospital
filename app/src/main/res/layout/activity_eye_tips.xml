<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/android"
    tools:context="com.Heavenking.chinabanglait.islamiaeyehospital.AboutActivity"
    tools:ignore="NamespaceTypo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_nav_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/allbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appback"
                android:text=":: Eye Tips  ::" />
        </LinearLayout>

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="100"
            android:paddingTop="6dp"
            android:text="@string/eyetips"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            autofit:minTextSize="14sp"
            tools:ignore="MissingConstraints" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="3"
            android:paddingTop="6dp"
            android:text="@string/eyetips1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            autofit:minTextSize="14sp"
            tools:ignore="MissingConstraints" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="100"
            android:paddingTop="6dp"
            android:text="@string/eyetips2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            autofit:minTextSize="14sp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                style="@style/allbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appback"
                android:text=":: Tips For Protecting Your Eyes  ::" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/eyetips" />

        <me.grantland.widget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="80"
            android:paddingTop="6dp"
            android:text="@string/eyetips3"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            autofit:minTextSize="14sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>